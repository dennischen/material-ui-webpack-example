{
    "compilerOptions": {
        //has to set commonjs or will get 'require function is used in a way in which dependencies cannot be statically extracted' when compile with webpack 
        "module": "commonjs",
        "target": "ES5",
        "allowJs": true,
        "jsx": "react",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "removeComments": true,
        "preserveConstEnums": true
        // cause dead in ts-loader
        // "declaration": true
    }
}